<div id="<%= dom_id student %>">
  <p>
    <strong>First name:</strong>
    <%= student.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= student.last_name %>
  </p>
  <!-- 
  <p>
    <strong>School email:</strong>
    <%= student.email %>
  </p>
  -->

  <p>
    <strong>Major:</strong>
    <%= student.major %>
  </p>

  <p>
    <strong>Minor:</strong>
    <%= student.minor.present? ? student.minor : "None" %>
  </p>


  <p>
    <strong>Graduation date:</strong>
    <%= student.graduation_date %>
  </p>


</div>

