<p class="text-success"><%= notice %></p>

<p>
  <strong>Profile Picture:</strong>
  <% if @student.profile_picture.attached? %>
    <%= image_tag @student.display_image, class: "img-thumbnail", size: "150x150" %>
  <% else %>
    <%= image_tag 'default_profile.png', class: "img-thumbnail", size: "150x150" %> 
  <% end %>
</p>

<%= render @student %>

<div class="mt-3">
  <%= link_to "Edit this student", edit_student_path(@student), class: "btn btn-warning" %> |
  <%= link_to "Back to students", students_path, class: "btn btn-secondary" %>

  <%= button_to "Destroy this student", @student, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
</div>
