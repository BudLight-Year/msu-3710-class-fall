<%= form_with(url: students_path, method: :get, local: true, class: "form-inline") do |form| %>
    <div>
      <%= form.label :major, "Select Major", class: "form-label" %>
      <%= form.select :major, options_for_select(Student::VALID_MAJORS), {prompt: "Any Major"}, name: 'search[major]', class: "form-control" %>
    </div>

    <div>
        <%= form.label :date, "Select Date", class: "form-label" %>
        <%= form.date_field :date, name: "search[date]" %>
    </div>

    <fieldset>
        
        
        <div>
            <%= form.label :date_before_after, "Search before or after date?", class: "form-label" %>
            <%= form.radio_button :date_before_after, "before", checked: @search_params[:date_before_after] == "before", id: 'search_date_before' %>
            <%= form.label :search_date_before, "Before" %>
            <%= form.radio_button :date_before_after, "after", checked: @search_params[:date_before_after] == "after", id: 'search_date_after' %>
            <%= form.label :search_date_after, "After" %>
        </div>
    </fieldset>

    <div>
        <%= form.check_box :show_all, {name: 'search[show_all]'}, "1", "0" %>
        <%= form.label :show_all, "Show All" %>
    </div>
  
    <div>
      <%= form.submit "Search", class: "btn btn-primary" %>
    </div>
<% end %>
